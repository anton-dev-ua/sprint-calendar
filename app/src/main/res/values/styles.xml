<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AbsenceProgress">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/absence_progress</item>
        <item name="android:minHeight">1dip</item>
        <item name="android:maxHeight">1dip</item>
    </style>

    <style name="HeaderText" parent="android:TextAppearance.Large">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="sprintTotalDays">
        <item name="android:textSize">46sp</item>
    </style>

    <style name="sprintDaysLeft">
        <item name="android:textSize">186sp</item>
        <item name="android:background">@drawable/days_left_background</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="sprintHoursLeft">
        <item name="android:textSize">112sp</item>
        <item name="android:background">@drawable/days_left_background</item>
    </style>

</resources>
