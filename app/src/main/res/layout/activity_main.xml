<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="sprintCalendar" type="com.example.anton.sprintcalendar.SprintCalendar" />
        <variable name="team" type="com.example.anton.sprintcalendar.Team" />
    </data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

            <include layout="@layout/week_row"
                bind:sprintCalendar="@{sprintCalendar}"
                bind:startDate="@{0}"
                bind:team="@{team}" />

            <include layout="@layout/week_row"
                bind:sprintCalendar="@{sprintCalendar}"
                bind:startDate="@{5}"
                bind:team="@{team}" />

        </LinearLayout>

        <include layout="@layout/summary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4" />
    </LinearLayout>
</layout>