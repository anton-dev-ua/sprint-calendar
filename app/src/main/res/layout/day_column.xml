<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:showIn="@layout/activity_main">

    <data>
        <import type="android.view.View"/>
        <variable name="sprintDay" type="com.example.anton.sprintcalendar.SprintDay"/>
        <variable name="today" type="com.example.anton.sprintcalendar.SprintDay"/>
        <variable name="team" type="com.example.anton.sprintcalendar.Team"/>
    </data>

    <FrameLayout android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_marginRight="1dp"
                 android:layout_weight="1"
                 android:background="@color/colorPrimary">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:tag="@{sprintDay}">

            <include layout="@layout/day_column_header" bind:sprintDay="@{sprintDay}"/>

            <include android:id="@+id/user1"
                     layout="@layout/day_user_cell"
                     bind:day="@{sprintDay}"
                     bind:teamMember="@{team.member(0)}"/>
            <include android:id="@+id/user2"
                     layout="@layout/day_user_cell"
                     bind:day="@{sprintDay}"
                     bind:teamMember="@{team.member(1)}"/>
            <include android:id="@+id/user3"
                     layout="@layout/day_user_cell"
                     bind:day="@{sprintDay}"
                     bind:teamMember="@{team.member(2)}"/>
            <include android:id="@+id/user4"
                     layout="@layout/day_user_cell"
                     bind:day="@{sprintDay}"
                     bind:teamMember="@{team.member(3)}"/>
            <include android:id="@+id/user5"
                     layout="@layout/day_user_cell"
                     bind:day="@{sprintDay}"
                     bind:teamMember="@{team.member(4)}"/>
            <include android:id="@+id/user6"
                     layout="@layout/day_user_cell"
                     bind:day="@{sprintDay}"
                     bind:teamMember="@{team.member(5)}"/>

        </LinearLayout>

        <View android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/today_overlay"
              android:visibility="@{sprintDay.isToday ? View.VISIBLE : View.GONE, default=gone}"/>

    </FrameLayout>

</layout>