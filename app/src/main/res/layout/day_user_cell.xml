<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:custom="http://schemas.android.com/apk/res/com.example.anton.sprintcalendar"
        xmlns:tools="http://schemas.android.com/tools"
        tools:showIn="@layout/activity_main">

    <data>
        <import alias="Presence" type="com.example.anton.sprintcalendar.PresenceType"/>
        <variable name="teamMember" type="com.example.anton.sprintcalendar.TeamMember"/>
        <variable name="day" type="com.example.anton.sprintcalendar.SprintDay"/>
    </data>

    <com.example.anton.sprintcalendar.TeamMemberDayView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:background="@{teamMember.presence(day.date) == Presence.FULL_DAY || day.isHoliday ? @drawable/precense_full_day : teamMember.presence(day.date) == Presence.HALF_DAY ? @drawable/precense_half_day : @drawable/precense_none}"
        android:tag="teamMemberDayView"
        custom:day="@{day}"
        custom:teamMember="@{teamMember}"
        />

</layout>