<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:custom="http://schemas.android.com/apk/res/com.example.anton.sprintcalendar"
        xmlns:tools="http://schemas.android.com/tools"
        tools:showIn="@layout/activity_main">

    <data>
        <variable name="teamMember" type="com.example.anton.sprintcalendar.TeamMember"/>
        <variable name="day" type="com.example.anton.sprintcalendar.SprintDay"/>
        <variable name="handler" type="com.example.anton.sprintcalendar.Handler"/>
    </data>

    <com.example.anton.sprintcalendar.TeamMemberDayView
        style="@style/AbsenceProgress"
        custom:teamMember="@{teamMember}"
        custom:day="@{day}"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:longClickable="true"
        android:onClick="@{handler.handle}"
        />

</layout>